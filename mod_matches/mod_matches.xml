<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
    <name>BCS Matches</name>
    <author>Lodder</author>
	<creationDate>21th May 2016</creationDate>
	<copyright>Copyright (C) 2018 | Lodder</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>admin@bcsmania.co.uk</authorEmail>
    <version>1.0.0</version>
    <description>BCS Matches</description>

    <files>
        <filename module="mod_matches">mod_matches.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
		<folder>tmpl</folder>
    </files>

	<config>
		<fields name="params">
			<fieldset name="Basic">

				<field name="list_matches"
					type="repeatable"
					icon="list"
					label="Matches">
					<fieldset hidden="true" name="list_matches_modal" repeat="true">
						<field name="opponent"
							label="Opponent"
							size="20"
							type="text" />
						<field name="date"
							label="Date"
							size="10"
							type="text" />
						<field name="score"
							label="Score (BCS)"
							size="5"
							type="text" />
						<field name="score2"
							label="Score (Opponent)"
							size="5"
							type="text" />
						<field name="winner"
							label="Winner"
							size="20"
							type="text" />
					</fieldset>
				</field>

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				
			</fieldset>

		</fields>
	</config>

</extension>
