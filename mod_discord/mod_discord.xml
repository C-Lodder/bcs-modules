<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
    <name>BCS Discord</name>
    <author>Lodder</author>
	<creationDate>13th May 2019</creationDate>
	<copyright>Copyright (C) 2019 | Lodder</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>admin@bcsmania.co.uk</authorEmail>
    <version>1.0.0</version>
    <description>BCS Discord Server</description>

    <files>
        <filename module="mod_discord">mod_discord.php</filename>
        <filename>index.html</filename>
		<folder>tmpl</folder>
    </files>

	<media folder="media" destination="mod_discord">
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<config>
		<fields name="params">
			<fieldset name="basic">

				<field
					name="server"
					type="text"
					label="Server ID" />

				<field name="members" type="radio" class="btn-group" default="1" label="List members" description="This will display a list of all the server members, their avatar, status and current game being played">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>

				<field name="members-count" type="radio" class="btn-group" default="1" label="Count members online" description="This will show the number of member currently online">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>

				<field name="connect" type="radio" class="btn-group" default="1" label="Connect button" description="This will show a button, allowing users to connect to the server">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>

				<field
					name="height"
					type="text"
					label="Height (px)" />

			</fieldset>

		</fields>
	</config>

</extension>
