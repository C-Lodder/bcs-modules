    <version>2.0.0</version>
    <description>BCS Related Information</description>

    <files>
        <filename module="mod_bcsinfo">mod_bcsinfo.php</filename>
        <filename>index.html</filename>
		<folder>tmpl</folder>
    </files>

	<media folder="media" destination="mod_bcsinfo">
