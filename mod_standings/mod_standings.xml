<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
    <name>BCS Standings</name>
    <author>Lodder</author>
	<creationDate>21th May 2016</creationDate>
	<copyright>Copyright (C) 2020 | Lodder</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>admin@bcsmania.co.uk</authorEmail>
    <version>1.0.5</version>
    <description>BCS Standings</description>

    <files>
        <filename module="mod_standings">mod_standings.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
		<folder>tmpl</folder>
    </files>

	<media folder="media" destination="mod_standings">
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>js</folder>
	</media>

	<config>
		<fields name="params">
			<fieldset name="basic">

				<field
					name="top"
					type="text"
					default="10"
					label="Count top XXX scores" />

				<field
					name="opponent"
					type="text"
					label="Opponent" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				
			</fieldset>

		</fields>
	</config>

</extension>
